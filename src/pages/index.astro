---
import Layout from "../layouts/Layout.astro";
import Image from "astro/components/Image.astro";
---

<Layout>
	<nav
		class="fixed top-0 w-full z-50 transition-all duration-300 bg-transparent text-white py-6"
	>
		<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
			<div class="flex items-center justify-between">
				<div class="flex-shrink-0 flex items-center cursor-pointer">
					<div class="flex items-center gap-2">
						<!-- <Image src="/logo.png" alt="Logo" /> -->
					</div>
				</div>
				<div class="hidden md:flex items-center space-x-6">
					<button
						class="text-blue-100 hover:text-white font-medium text-sm"
					>
						Start
					</button>
					<div class="relative group">
						<button
							class="text-blue-100 hover:text-white font-medium text-sm flex items-center gap-1"
						>
							Oferta
							<svg
								xmlns="http://www.w3.org/2000/svg"
								width="24"
								height="24"
								viewBox="0 0 24 24"
								fill="none"
								stroke="currentColor"
								stroke-width="2"
								stroke-linecap="round"
								stroke-linejoin="round"
								class="lucide lucide-chevron-down w-3 h-3 text-blue-200"
								aria-hidden="true"
							>
								<path d="m6 9 6 6 6-6"></path>
							</svg>
						</button>
					</div>
					<button
						class="text-blue-100 hover:text-white font-medium text-sm"
					>
						Pobierz Programy</button
					><button
						class="text-blue-100 hover:text-white font-medium text-sm"
					>
						Sklep</button
					><button
						class="text-blue-100 hover:text-white font-medium text-sm"
					>
						Blog</button
					><button
						class="text-blue-100 hover:text-white font-medium text-sm"
					>
						Pomoc
					</button>
					<div class="relative">
						<button
							class="flex items-center gap-2 border-l pl-4 border-blue-500 focus:outline-none"
						>
							<img
								alt="PL"
								class="w-6 h-auto rounded-sm shadow-sm"
								src="https://flagcdn.com/w40/pl.png"
							/><svg
								xmlns="http://www.w3.org/2000/svg"
								width="24"
								height="24"
								viewBox="0 0 24 24"
								fill="none"
								stroke="currentColor"
								stroke-width="2"
								stroke-linecap="round"
								stroke-linejoin="round"
								class="lucide lucide-chevron-down w-3 h-3 text-blue-200"
								aria-hidden="true"
							>
								<path d="m6 9 6 6 6-6"></path>
							</svg>
						</button>
					</div>
					<button
						class="bg-raf-red hover:bg-raf-redHover text-white px-5 py-2.5 rounded text-sm font-bold transition-colors shadow-lg"
					>
						Bezpłatne wersje programów
					</button>
				</div>
				<div class="md:hidden">
					<button class="text-white">
						<svg
							xmlns="http://www.w3.org/2000/svg"
							width="24"
							height="24"
							viewBox="0 0 24 24"
							fill="none"
							stroke="currentColor"
							stroke-width="2"
							stroke-linecap="round"
							stroke-linejoin="round"
							class="lucide lucide-menu w-6 h-6"
							aria-hidden="true"
						>
							<path d="M4 5h16"></path>
							<path d="M4 12h16"></path>
							<path d="M4 19h16"></path>
						</svg>
					</button>
				</div>
			</div>
		</div>
	</nav>
</Layout>

<h1 class="text-7xl">Nazmul Islam</h1>
