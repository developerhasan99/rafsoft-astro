---
import Layout from "../layouts/Layout.astro";
import Image from "astro/components/Image.astro";
import HeroSection from "./sections/hero.astro";
import Navbar from "../partials/navbar.astro";
import FeaturesSection from "./sections/features.astro";
import Footer from "../partials/footer.astro";
import ProstyProgramSection from "./sections/prosty-program.astro";
import PricingSection from "./sections/pricing.astro";
import ProductDrescription from "./sections/product-drescription.astro";
import CounterSection from "./sections/counter.astro";
import TestimonialSection from "./sections/testimonial.astro";
---

<Layout>
	<Navbar />

	<main>
		<HeroSection />

		<FeaturesSection />

		<ProstyProgramSection />

		<ProductDrescription />

		<PricingSection />

		<CounterSection/>
		
		<TestimonialSection/>
		
		<section id="blog" class="py-24 bg-gray-50">
			<div class="max-w-6xl mx-auto px-6">
				<div class="text-center mb-16">
					<h2 class="text-3xl font-bold text-gray-800">Blog</h2><p
						class="text-gray-500 mt-2"
					>
						Przeczytaj nasz blog
					</p>
				</div><div class="grid md:grid-cols-3 gap-8">
					<div class="group cursor-pointer">
						<div class="overflow-hidden rounded-lg mb-4">
							<img
								alt="Amortyzacja bilansowa wartości firmy – jak sobie z tym poradzić?"
								class="w-full h-48 object-cover group-hover:scale-105 transition-transform duration-500"
								src="https://placehold.co/400x300/e2e8f0/64748b?text=Amortyzacja"
							/>
						</div><h3
							class="text-lg font-bold text-gray-800 mb-2 group-hover:text-raf-blue transition-colors"
						>
							Amortyzacja bilansowa wartości firmy – jak sobie z
							tym poradzić?
						</h3><div class="text-xs text-gray-400">
							29 czerwca, 2025 | Firma
						</div>
					</div><div class="group cursor-pointer">
						<div class="overflow-hidden rounded-lg mb-4">
							<img
								alt="WIA co to jest? Wiążące Informacje Akcyzowe: Przewodnik 2025"
								class="w-full h-48 object-cover group-hover:scale-105 transition-transform duration-500"
								src="https://placehold.co/400x300/e2e8f0/64748b?text=WIA"
							/>
						</div><h3
							class="text-lg font-bold text-gray-800 mb-2 group-hover:text-raf-blue transition-colors"
						>
							WIA co to jest? Wiążące Informacje Akcyzowe:
							Przewodnik 2025
						</h3><div class="text-xs text-gray-400">
							29 czerwca, 2025 | Firma
						</div>
					</div><div class="group cursor-pointer">
						<div class="overflow-hidden rounded-lg mb-4">
							<img
								alt="Metoda FIFO (pierwsze przyszło, pierwsze wyszło) wyjaśniona na przykładach"
								class="w-full h-48 object-cover group-hover:scale-105 transition-transform duration-500"
								src="https://placehold.co/400x300/e2e8f0/64748b?text=FIFO"
							/>
						</div><h3
							class="text-lg font-bold text-gray-800 mb-2 group-hover:text-raf-blue transition-colors"
						>
							Metoda FIFO (pierwsze przyszło, pierwsze wyszło)
							wyjaśniona na przykładach
						</h3><div class="text-xs text-gray-400">
							29 czerwca, 2025 | Poradnik
						</div>
					</div>
				</div>
			</div>
		</section><div id="contact">
			<section class="bg-white py-20">
				<div
					class="max-w-4xl mx-auto px-6 flex flex-col md:flex-row items-center gap-12"
				>
					<div class="shrink-0">
						<svg
							xmlns="http://www.w3.org/2000/svg"
							width="24"
							height="24"
							viewBox="0 0 24 24"
							fill="none"
							stroke="currentColor"
							stroke-width="2"
							stroke-linecap="round"
							stroke-linejoin="round"
							class="lucide lucide-life-buoy w-48 h-48 text-gray-300 stroke-[0.5]"
							aria-hidden="true"
							><circle cx="12" cy="12" r="10"></circle><path
								d="m4.93 4.93 4.24 4.24"></path><path
								d="m14.83 9.17 4.24-4.24"></path><path
								d="m14.83 14.83 4.24 4.24"></path><path
								d="m9.17 14.83-4.24 4.24"></path><circle
								cx="12"
								cy="12"
								r="4"></circle></svg
						>
					</div><div class="text-center md:text-left space-y-4">
						<p class="text-gray-600 text-sm">
							Użytkownicy korzystający z naszych programów do
							fakturowania mogą zawsze liczyć na wsparcie naszego
							zespołu pomocy technicznej.
						</p><p class="text-gray-600 text-sm">
							Używasz programu i masz pytania dotyczące jego
							obsługi?
						</p><p class="text-gray-600 text-sm">
							Masz pytania dotyczące programu przed zakupem?
						</p><div class="space-y-1 pt-4">
							<a
								href="#"
								class="block text-raf-blue hover:underline text-sm font-medium"
								>Napisz do nas</a
							><a
								href="#"
								class="block text-raf-blue hover:underline text-sm font-medium"
								>FAQ - Częste pytania i odpowiedzi</a
							><a
								href="#"
								class="block text-raf-blue hover:underline text-sm font-medium"
								>FILMY INSTRUKTAŻOWE</a
							><a
								href="#"
								class="block text-raf-blue hover:underline text-sm font-medium"
								>DOKUMENTACJA DO PROGRAMU FAKTURA VAT</a
							>
						</div>
					</div>
				</div>
			</section><section class="bg-white py-12 border-t border-gray-100">
				<div class="max-w-6xl mx-auto px-6">
					<div
						class="text-center mb-8 text-gray-400 text-sm uppercase tracking-widest font-semibold"
					>
						Partnerzy i integracje
					</div><div
						class="flex flex-wrap justify-center gap-8 md:gap-16 grayscale opacity-60"
					>
						<span class="text-2xl font-bold">allegro</span><span
							class="text-2xl font-bold">PrestaShop</span
						><span class="text-2xl font-bold">Magento</span><span
							class="text-2xl font-bold">WOOCOMMERCE</span
						><span class="text-2xl font-bold">BaseLinker</span>
					</div>
				</div>
			</section><section
				class="bg-gray-50 py-16 border-y border-gray-200"
			>
				<div
					class="max-w-6xl mx-auto px-6 flex flex-col md:flex-row items-center justify-between gap-6"
				>
					<div>
						<h3 class="text-2xl font-bold text-gray-800">
							Bezpłatna wersja programu na 31 dni
						</h3><p class="text-gray-500 mt-2 text-sm">
							Darmowa wersja programu Faktura VAT 2026
						</p>
					</div><button
						class="bg-raf-red hover:bg-raf-redHover text-white px-8 py-3 rounded font-bold transition-colors"
						>Pobierz program</button
					>
				</div>
			</section>
		</div>
		<Footer />
	</main>
</Layout>
