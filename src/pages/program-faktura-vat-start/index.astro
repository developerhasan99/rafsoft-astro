// Customer reviews
const reviews = [
  {
    text: "Program naprawdę przypadł mi do gustu, przyjazny interfejs, łatwość obsługi, skumulowanie tylko najpotrzebniejszych funkcjonalności i to mi właśnie odpowiada...",
    author: "Mariusz W."
  },
  {
    text: "Program bardzo przejrzysty, faktura w ŚWIETNEJ szacie graficznej. POLECAM",
    author: "Dariusz S."
