---
import Layout from "../../layouts/Layout.astro";
import page_header_bg_img from "../../images/panel_gorny-1.webp";
import StartImg from "../../images/faktura-vat-start.webp";

// Accordion component for features
const features = [
  {
    title: "Wystawianie faktur, rachunków, paragonów - lista wystawianych dokumentów",
    content: `
      <ul class="space-y-2">
        <li>Faktura dla płatników VAT i podmiotów nie będących płatnikami VAT</li>
        <li>Faktura uproszczona i faktura VAT marża</li>
        <li>Faktura MP, VAT RR, WDT, WNT</li>
